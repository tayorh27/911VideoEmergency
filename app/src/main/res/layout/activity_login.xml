<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:layout_marginLeft="@dimen/padding_start"
    android:layout_marginRight="@dimen/padding_start"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_actionbar"
        android:text="@string/text_welcoming_message" />

    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:layout_marginTop="32dp"
        android:hint="@string/hint_user_name"
        android:paddingTop="@dimen/padding_top"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/chat_room_name"
        style="@style/MatchWidth"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/flag_ad"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:hint="@string/hint_chat_room_name"
        android:paddingTop="@dimen/padding_top"
        android:editable="false"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="16sp" />

</LinearLayout>